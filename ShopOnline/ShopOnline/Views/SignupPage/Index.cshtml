@{
    Layout = null;
}
@model ShopOnline.Models.RegisterModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            height: 100vh;
            position: relative;
        }

        .login-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Đảm bảo hình ảnh nền ở phía sau form */
        }

        .login-form {
            background-color: rgba(198, 226, 255, 0.8); /* Độ trong suốt của form */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
            position: absolute;
            top: 50%;
            right: -10%;
            transform: translate(-50%, -50%);
        }

            .login-form h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .input-group label {
                display: block;
                margin-bottom: 5px;
                color: #555;
            }

            .input-group input {
                width: calc(100% - 12px);
                padding: 10px;
                border-radius: 4px;
                border: 1px solid #ccc;
                font-size: 14px;
            }

        button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }

        .input-group input:focus {
            outline: none;
            border-color: #007bff;
        }

        .input-group input::placeholder {
            color: #999;
        }
    </style>
</head>
<body>
    <img class="login-background" src="~/Assets/Image/elle-viet-nam-streetstyle-tuan-le-thoi-trang-35.jpg" alt="Background Image">
    @using (Html.BeginForm("Register", "SignUpPage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="login-form">
            <img src="~/Assets/Image/Logo_dhktdn.png" width="200" height="200" />
            <h2>Đăng Ký</h2>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="input-group">
                @Html.LabelFor(model => model.Username, "Tên đăng nhập:")
                @Html.TextBoxFor(model => model.Username, new { @autofocus = "autofocus" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.Password, "Mật khẩu:")
                @Html.PasswordFor(model => model.Password, new { @autofocus = "autofocus" })
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.ConfirmPassword, "Nhập lại mật khẩu:")
                @Html.PasswordFor(model => model.ConfirmPassword, new { @autofocus = "autofocus" })
            </div>
            <button type="submit">Đăng ký</button>
            <h5>Bạn đã có tài khoản? <a href="https://localhost:44353/LoginPage/Index" style="color: navy">Đăng nhập ngay</a></h5>
        </div>
    }
</body>
</html>
