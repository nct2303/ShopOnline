@model IEnumerable<Model.EntityFramwork.OrderDetail>

@{
    ViewBag.Title = "Order Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>Order ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.order_id<td>
                <td>@item.product_id</td>
                <td>@item.orderdetail_quanlity</td>
                <td>@item.orderdetail_price</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.order_id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Delete", "DeleteOrder", new { id = item.order_id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        margin-top: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        margin: 0 5px;
    }

    img {
        display: block;
        margin: 0 auto;
    }
</style>
