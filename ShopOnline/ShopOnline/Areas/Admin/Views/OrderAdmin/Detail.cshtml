@model IEnumerable<Model.EntityFramwork.Order>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>Order_ID</th>
            <th>Customer_USERNAME</th>
            <th>DATE</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <th>@item.order_id</th>
                <th>@item.customer_username</th>
                <th>@item.CreateDate</th>
                <th>
                    @if(item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>                      
                    }
                    else
                    {
                        <span class="text text-success">Đơn hàng cũ</span>
                    }      
                </th>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.order_id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Details", "DetailOrder", new { id = item.order_id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Delete", "DeleteOrder", new { id = item.order_id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        margin-top: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        margin: 0 5px;
    }

    img {
        display: block;
        margin: 0 auto;
    }
</style>